{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "jsx": "react-jsx",
    "types": ["node", "jest", "cypress"],
    "baseUrl": ".",
    "paths": {
      "@pages": ["src/pages"],
      "@components": ["src/components"],
      "@ui": ["src/components/ui"],
      "protected-route": ["src/components/protected-route"],
      "@ui-pages": ["src/components/ui/pages"],
      "@utils-types": ["src/utils/types"],
      "@api": ["src/utils/burger-api.ts"],
      "@slices/constructor/*": ["src/services/slices/constructor/*"],
      "@slices/feeds/*": ["src/services/slices/feeds/*"],
      "@slices/ingredients/*": ["src/services/slices/ingredients/*"],
      "@slices/newOrder/*": ["src/services/slices/newOrder/*"],
      "@slices/user/*": ["src/services/slices/user/*"],
      "@slices/userOrders/*": ["src/services/slices/userOrders/*"],
      "@selectors": ["src/services/selectors"],
      "@services/store/*": ["src/services/store/*"]
    }
  },
  "include": ["src", "cypress.config.ts", "cypress/**/*.ts", "cypress/**/*.tsx"]
}
